<Window x:Class="_185338HelloWorld.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_185338HelloWorld"
        mc:Ignorable="d"
        Title="Hello World?" Height="350" Width="525" FontSize="12">
    <StackPanel> 
        <Label x:Name="message" Content="The Earth is flat" />
        <TextBox x:Name="txtname" Text="Enter your name here..." />
        <Button Click="btnGreeting_Click" x:Name="btnGreeting" Content="Click for answer" />
    </StackPanel>
</Window>
